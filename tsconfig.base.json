{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
   		"outDir": "../../dist/out-tsc",
		"declaration": true, // enable this to have .d.ts files generated -  emitDeclarationOnly prop cannot be used without this
		"target": "esnext",
		"module": "commonjs",
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
   		"emitDeclarationOnly": true,
		"importHelpers": true,
		"lib": ["ES2015", "es2017", "ES2022", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@nest-sls-monorepo/common": ["libs/common/src/index.ts"]
		}
	},
	"include": ["apps/**/*.ts", "libs/**/*.ts"],
	"exclude": ["node_modules", "tmp"]
}
